<section class="pageIndent">
    <h1>Wikis</h1> 
    <%= link_to "New Wiki", new_wiki_path, class: 'btn btn-default' %>
    <br>
    <br>
<div class="row">
    <% @wikis.each do |wiki| %>
    <div class="col-md-8">
        <h4 class="media-heading">
            <%= link_to wiki.title, wiki %>
        </h4>
    </div>
    <div class="col-md-1">
        <% if current_user.admin? || current_user.premium? || wiki.private? == false %>
          <%= link_to "Edit Wiki", edit_wiki_path(wiki), class: 'btn btn-link' %>
        <% else %>
            <p>Private Wiki<p>
        <% end %>
    </div>
    <div class="col-md-1">
          <%= link_to "Delete Wiki", wiki, method: :delete, class: 'btn btn-link', data: { confirm: 'Are you sure you want to delete this wiki?' } %>
    </div>
  <% end %>
</div>
</section>






